{% extends 'base.html.twig' %}

{% block title %}Formulaire Activité{% endblock %}

{% block body %}
<body>
<header>
<h1>Activité</h1>
</header>
<div class="crea_contenu">
     <a href="{{ path('activity_form') }}" class="active">Activité</a>
   <a href="{{ path('restaurant_form') }}">Restauration</a>
   <a href="{{ path('accommodation_form') }}">Hébergement</a>
   <a href="{{ path('voyage_form') }}">Destination</a>
</div>
    {{ form_start(ActivityForm) }}
    <div class="global_form_voyage">
        <div class="css_form">
            <div class="css_form2">
                <h3>Nom de l'Activité</h3>
                {{ form_widget(ActivityForm.name)}}
            </div>
        </div>


         <div class="css_form">
            <div class="css_form2">
             <h3>Photo de couverture</h3>
             <p>Veuillez joindre des photos de votre activité</p>
                {{ form_row(ActivityForm.main_picture)}}
            </div>
        </div>
            
     
        
        <div class="css_form">
        <div class="css_form2">
            <h3>Prix</h3>
            <p>Veuillez indiquer un prix approximatif de votre activité</p>
            {{ form_widget(ActivityForm.price) }}
        </div>
        </div>


        <div class="css_form">
        <div class="css_form2">
            <h3>Equipement</h3>
            <p>Faut-il prévoir du matériel ?</p>
            {{ form_widget(ActivityForm.equipment) }}
        </div>
        </div>



        <div class="css_form">
        <div class="css_form2">
            <h3>Réservation</h3>
            <p>Faut-il réserver à l’avance ?</p>
            {{ form_widget(ActivityForm.reservation) }}
        </div>
        </div>


        <div class="css_form">
            <div class="css_form2">

            <h3>Ambiance</h3>
            <p>Quel est l’ambiance du lieu ?</p>
            {{ form_widget(ActivityForm.atmosphere) }}

            </div>
        </div>

        <div class="css_form">
        <div class="css_form2">
                <h3>Où se situe cette activité ?</h3>
                <h3>Pays</h3>
                {{ form_widget(ActivityForm.country) }}
        </div>
        </div>


        <div class="css_form">
        <div class="css_form2">
                <h3>Ville</h3>
                {{ form_widget(ActivityForm.city) }}
        </div>
        </div>

        <div class="css_form">
        <div class="css_form2">
                <h3>Code Postale</h3>
                {{ form_widget(ActivityForm.postal_code) }}
        </div>
        </div>

        <div class="css_form">
        <div class="css_form2">
                <h3>Adresse</h3>
                {{ form_widget(ActivityForm.address_1) }}

        </div>
        </div>

        <div class="css_form">
        <div class="css_form2">
                <h3>Calendrier</h3>
                <p>Quand avez-vous visitez ce lieu ?</p>
                {{ form_widget(ActivityForm.calendar) }}
        </div>
        </div>        


    <div class="description_conseil">
        <h3>Description</h3>
        <p>Décrivez en quelques lignes l’activité</p>
        {{ form_widget(ActivityForm.description) }}
        <h3>Points Forts</h3>
        <p>Décrivez en quelques lignes les points fort de l’activité</p>
        {{ form_widget(ActivityForm.strong_point) }}
        <h3>Points Faibles</h3>
        <p>Décrivez en quelques lignes les points faible de l’activité</p>
        {{ form_widget(ActivityForm.weak_point) }}
    </div>
    <br>
    <div class="description_conseil2">
            <button> {{button_label|default('Valider')}}</button>
        </div>
    {{ form_end(ActivityForm) }}
</div>
    </body>
{% endblock %}

