{% extends 'base.html.twig' %}

{% block title %}Hello SurveyController!{% endblock %}

{% block body %}
<a href="{{path('surveyquestion1') }}" class="previous_question"> &#60  Retour</a>

<section class="container_survey">
        {{ form_start(form) }}
        <p class="question_number">Question 4 sur 10</p>
        <h1 class="Big_question">Préférence culinaire</h1>
        <p class="small_question">Quelles sont vos préférences culinaire ?</p>
        {{ form_row(form._token) }}

            <div class="range_global">
                <div class="box_container">
                {{ form_widget(form.favorite_food)}}
                </div>
            </div>
        <div class="question_button_center">
        <button class="question_button">{{ button_label|default('Suivant')}} </button>
        </div>
        <a href="{{path('home') }}" class="plus_tard">Plus tard</a>
        {{ form_end(form, {'render_rest': false} )}}
</section>
{% endblock %}